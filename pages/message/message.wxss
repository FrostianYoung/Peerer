/* pages/message/message.wxss */
.message_box {
  box-sizing: border-box;
  box-shadow: 0 2px 50x 0 rpba(0,0,0,.1);
  border-radius: 10px;
  background-color: white;
  padding: 8px 16px;
  margin: 8px 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.navBar {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  background: #fff;
}

.logo_mini {
  width: 59.8px;
  height: 26px;
  box-shadow: none;
}

.message_content.navBar {
  display: flex;
  -webkit-box-align: center;
  align-items: center;
}

.message_content {
  box-sizing: border-box;
  padding: 0 16px 16px;
  background-color: #f5f5f5;
  height: 100%;
  min-height: 100vh;
  -webkit-box-pack: start;
  justify-content: flex-start;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  flex-direction: column;
}

.empty-title {
  background-color: #f1f8ff;
  border: none;
  box-shadow: 0 2px 6px 0 rgb(0 0 0/10%);
  color: #74aeea;
  border-radius: 20px;
  font-size: 13px;
  text-align: center;
  line-height: 19px;
  display: inline-block;
  padding: 8px 16px;
}

.leav-message {
  box-sizing: border-box;
  box-shadow: 0 2px 5px 0 rgba(0,0,0,.1);
  border-radius: 10px;
  background-color: #fff;
  padding: 4px 16px 16px;
  margin: 16px 0;
  width: 100%;
}

.user-info {
  display: flex;
  margin-top: 4px;
  padding-top: 0!important;
  position: relative;
}

.item_img {
  margin-top: -24px;
}

.item_content {
  margin-left: 8px;
}

.message-tag {
  background-color: #96c8fa;
  border: none;
  color: #fff;
  border-radius: 20px;
  font-size: 12px;
  text-align: center;
  line-height: 22px;
  font-weight: 700;
  position: absolute;
  right: 0;
  top: 4px;
  height: 22px;
  width: 22px;
}

.message ._img {
  width: 1.2rem;
  float: left;
  padding-right: .2rem;
}

.message>.to-message>view {
  width: 80%;
  margin-top: .8rem;
  background-color: #ecf6ff;
  border: none;
  color: #777;
  border-radius: 5px;
  font-size: 14px;
  padding: 8px 16px;
  text-align: justify;
  line-height: 18px;
  font-weight: 400;
  font-style: normal;
  opacity: 1;
}

.message>.to-message>view>text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.message>.my-message>view {
  margin-top: .8rem;
  background-color: #f5f5f5;
  border: none;
  color: #777;
  border-radius: 5px;
  font-size: 14px;
  padding: 8px 16px;
  text-align: justify;
  line-height: 18px;
  font-weight: 400;
  font-style: normal;
  opacity: 1;
  margin-left: 10%;
  overflow: hidden;
}

.message>.my-message>view>text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.message_bumber {
  display: inline-block;
  width: 20px;
  height: 20px;
  background-color: #69aff7;
  border: none;
  color: #fff;
  font-size: 14px;
  padding: 0;
  text-align: center;
  line-height: 20px;
  margin-left: 8px;
  border-radius: 18px;
}

.notification {
  box-sizing: border-box;
  box-shadow: 0 2px 5px 0 rgba(0,0,0,.1);
  border-radius: 10px;
  background-color: #fff;
  padding: 8px 16px;
  margin: 8px 0;
  width: 100%;
  display: flex;
  -webkit-box-align: center;
  align-items: center;
  -webkit-box-pack: justify;
  justify-content: space-between;
}

.image-group {
  margin-left: -.3rem;
}