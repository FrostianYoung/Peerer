/* pages/message/message.wxss */
.message_box {
  box-sizing: border-box;
  box-shadow: 0 2px 50x 0 rpba(0,0,0,.1);
  border-radius: 10px;
  background-color: white;
  padding: 8px 16px;
  margin: 8px 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  -webkit-box-align: center;
  -webkit-box-pack: justify;
}